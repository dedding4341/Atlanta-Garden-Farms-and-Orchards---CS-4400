</head>


  <body>
    <form class="ownerProperties">
      <div class="center-h-container">
        <h1 class="font-weight-normal"> Welcome, {{username}}</h1>
      </div>

      <h1 class="h3 mb-3 font-weight-normal">Your Properties: </h1>

      <!-- INSERT TABLE -->


      <table class="table table-bordered table-hover">
          <thead class="thead-light">
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">Zip</th>
                <th scope="col">Size</th>
                <th scope="col">Type</th>
                <th scope="col">Public</th>
                <th scope="col">Commercial</th>
                <th scope="col">ID</th>
                <th scope="col">isValid</th>
                <th scope="col">Visits</th>
                <th scope="col">Avg. Rating</th>
              </tr>
          </thead>
          <tr>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
          </tr>
          <tr>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
            <td scope="col">mock</td>
          </tr>

      </table>

      <div>



      <table class="selection-table">
        <tr>
          <th>
            <div class="center-h-container">
              <div class="not-btn-input">
                <select class="form-control "  id="searchBy">
                  <option>Search by...</option>
                  <option>Name</option>
                  <option>City</option>
                  <option>Type</option>
                  <option>Visits</option>
                  <option>Avg. Rating</option>
                </select>
              </div>
            </div>
          </th>
          <th>
            <button type="button" class="btn ">Manage Property</button>
          </th>
        </tr>
        <tr>
          <th>
            <div class="center-h-container">
              <label for="searchTerm" class="sr-only">Search Term</label>
              <input id="searchTerm" class="form-control not-btn-input" placeholder="Search Term" required autofocus>
            </div>
          </th>
          <th>
            <button type="button" class="btn ">Add Property</button>
          </th>
        </tr>
        <tr>
          <th>
            <button type="button" class="btn ">Search Properties</button>
          </th>
          <th>
            <button type="button" class="btn">View Other Properties</button>
          </th>
          <th>
            <button type="button" class="btn ">Log Out</button>
          </th>
        </tr>

      </table>
    </form>
  </body>



  <style>

    body {
