        th>.dropdown-toggle:active {
            outline: none !important;
            box-shadow: none;
        }

        .table tbody tr.highlight td {
            background-color: #ddd;
        }

        .hiddenField {
            display: none;
        }

        .not-btn-input {
            width: 300px;
        }
    </style>

<body>
    <div class="form-unconfirmed">
        <h1 id="title" class="h3 mb-3 font-weight-normal text-center">Welcome <b>{{username}}</b></h1>
        <h3 id="subtitle" class="h4 mb-2 font-weight-normal">All public, validated properties:</b></h1>
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <!-- onclick="sort(document.getElementById('sortName').value) -->
                      <th scope="col">Name<button id="sortName" class="btn dropdown-toggle float-right" type="button" ></button></th>
                      <th scope="col">Address</th>
                      <th scope="col">City<button id="sortCity" class="btn dropdown-toggle float-right" type="button"></button></th>
                      <th scope="col">Zip</th>
                      <th scope="col">Size</th>
                      <th scope="col">Type<button id="sortType" class="btn dropdown-toggle float-right" type="button"></button></th>
                      <th scope="col">Public</th>
                      <th scope="col">Commercial</th>
                      <th scope="col">ID</th>
                      <th scope="col">Visits<button id="sortVisits" class="btn dropdown-toggle float-right" type="button"></button></th>
                      <th scope="col">Avg. Rating<button id="sortAvgRating" class="btn dropdown-toggle float-right" type="button"></button></th>
                    </tr>
                </thead>
                <tbody id="rows">

                {{#each rows}}
                  <tr>
                    <td scope="row">{{this.Name}}</td>
                    <td>{{this.Address}}</td>
                    <td>{{this.City}}</td>
                    <td>{{this.Zip}}</td>
                    <td>{{this.Size}}</td>
                    <td>{{this.TYPE}}</td>
                    <td>{{this.Public}}</td>
                    <td>{{this.Commercial}}</td>
                    <td>{{this.ID}}</td>
                    <td>{{this.Visits}}</td>
                    <td>{{{[Avg. Rating]}}}</td>
                  </tr>
                {{/each}}
                </tbody>
            </table>

            <br>
            <div class="d-flex justify-content-between">
                <div class="d-flex justify-content-between flex-direction: flex-column">
                    <form method = "POST" action = "/visitorHome">
                        <!-- <div class="dropdown">
                          <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 200px; height: 35px;" required>
                            Search by...
                          </button>
                          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <button id="name" class="dropdown-item" type="button">Name</button>
                            <button id="city" class="dropdown-item" type="button">City</button>
                            <button id="type" class="dropdown-item" type="button">Type</button>
                            <button id="visits" class="dropdown-item" type="button">Visits</button>
                            <button id="avgRating" class="dropdown-item" type="button">Average Rating</button>
                          </div>
                        </div> -->

                        <div class="not-btn-input">
                          <select class="form-control" id="searchBy" name="column" required>
                            <option value="">Search by...</option>
                            <option>Name</option>
                            <option>City</option>
                            <option>Type</option>
                            <option>Visits</option>
                            <option>Avg. Rating</option>
                          </select>
                        </div>
                        <input type="text" class="form-control" id="searchText" placeholder="Search Term" name="search" style="width: 200px; text-align: center; height: 35px; margin-top: 5px;" required>
                        <button id="searchProperties" class="btn btn-primary" type="submit" style="width: 200px; text-align: center; height: 35px; margin-top: 5px;">
                            Search Properties
                        </button>
                    </form>
                </div>
                <div class="d-flex justify-content-between flex-direction: flex-column-reverse">
                    <form method = "POST" action = "/visitorDetails">
                        <input type="text" id = "idSelector" name="idSelection" class = "hiddenField" placeholder="Email address">
                        <input id="viewProperty" class="btn btn-primary" type="submit" value="View Property" style="width: 200px; text-align: center; height: 35px; margin-top: 5px;">
                    </form>
                    <form id="history" method = "POST" action = "/visitorHistory">
                        <input id="visitHistory" class="btn btn-primary" type="submit" value="View Visit History" style="width: 200px; text-align: center; height: 35px; margin-top: 5px;">
                    </form>
                </div>
                <div class="d-flex justify-content-between flex-direction: flex-column-reverse">
                    <a id="logout" class="btn btn-info" href = "/"  style="width: 200px; text-align: center; height: 35px; margin-top: 5px;">Logout</a>
                </div>
            </div>
        </div>
    </body>
</html>

<script type="text/javascript">
    $('.dropdown-item').click(function() {
        $('#dropdownMenuButton').text('Search by: ' + $(this).text());
    });

    $('th>.dropdown-toggle').on('click', onClick);

    $("tbody tr").click(function() {
        $(this).addClass('highlight').siblings().removeClass('highlight');
        var cells = this.cells; //cells collection
        var id = cells[8].innerHTML;
        $('#idSelector').val(id);
        // $(this).addClass('bg-info').siblings().removeClass('bg-info');
    });

    function onClick(e) {
        var th = $(e.target).parent();
        var col = th.text();
        var table = $(th).parents('table').eq(0);
        var rows = table.find('tr:gt(0)').toArray().sort(compare($(th).index()));
        this.asc = !this.asc;
        if (!this.asc) {
            rows = rows.reverse();
        }
        for (var i = 0; i < rows.length; i++) {
            table.append(rows[i]);
        }
    }

    $('<input>').attr({
        type: 'hidden',
        id: 'username',
        name: 'username',
        value: '{{username}}'
    }).appendTo('#history')

    function compare(index) {
        return function(a, b) {
            var valA = getCellValue(a, index); 
            var valB = getCellValue(b, index);
            return $.isNumeric(valA) && $.isNumeric(valB) ? valA - valB : valA.toString().localeCompare(valB);
        }
    }

    function getCellValue(row, index){ 
        return $(row).children('td').eq(index).text(); 
    }

</script>