</html>
<script>
$(document).ready(function() {
    var currentSelected = document.getElementById('farm').textContent;

    //console.log(currentSelected);
    if (currentSelected == "FARM") {
        console.log("hello");
        document.getElementsByClassName("filterItem")[0].classList.remove("hidden");
    }

    $('<input>').attr({
        type: 'hidden',
        id: 'hiddenPropertyId',
        name: 'idSelection',
        value: $('#id').text()
    }).appendTo('form');

    $('<input>').attr({
        type: 'hidden',
        id: 'logged',
        name: 'logged',
        value: '{{logged}}'
    }).appendTo('form');

    $('<input>').attr({
        type: 'hidden',
        id: 'username',
        name: 'username',
        value: '{{username}}'
    }).appendTo('form');

    $('<input>').attr({
        type: 'hidden',
        id: 'hiddenRating',
        name: 'rating'
    }).appendTo('form');

    $(document).change(function() {

        var currentSelected = document.getElementById('farm').textContent;
        //console.log(currentSelected);
        if (currentSelected == "FARM") {
            document.getElementsByClassName("filterItem")[0].classList.remove("hidden");
        } else {
            console.log('whysadkj')
            document.getElementsByClassName("filterItem")[0].classList.add("hidden")
        }
    });
});

$(".btn-secondary").click(function(){
   $(".btn-secondary").removeClass("active");
   $(this).addClass("active");
   $('#hiddenRating').val($(this).text());
});

$('#log').click( function (e) {
    var active = $("#ratingGroup .active");
    console.log(active);
    if($("#ratingGroup .active").val() === undefined) {
        e.preventDefault();
        window.alert('please select an option');
    }
    
});
</script>